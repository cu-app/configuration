# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# This file shows the EXACT configuration needed to connect to real core banking.
# Copy to .env.local and fill in values from your Jack Henry contract.
# ============================================================================

# ============================================================================
# POWERON / SYMXCHANGE CONNECTION
# ============================================================================

# Connection mode: 'mock' | 'symxchange' | 'direct'
# - mock: Returns fake data (development/demo)
# - symxchange: Connect via Jack Henry's SymXchange API gateway (recommended)
# - direct: Direct TCP connection to Symitar host (requires VPN/firewall rules)
POWERON_MODE=symxchange

# SymXchange API Configuration (from Jack Henry)
SYMXCHANGE_URL=https://symxchange.jackhenry.com/api/v1
SYMXCHANGE_API_KEY=your-symxchange-api-key-from-jack-henry

# Your credit union's Symitar institution number
INSTITUTION_ID=12345

# Direct host connection (alternative to SymXchange)
# Only used when POWERON_MODE=direct
POWERON_HOST=symitar.yourcreditunion.com
POWERON_PORT=443

# Connection timeout in milliseconds
POWERON_TIMEOUT=30000

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT secret for session tokens (generate a strong random string)
JWT_SECRET=your-256-bit-secret-key-change-this-in-production

# Session timeouts (FFIEC compliant - 15 min session, 5 min inactivity)
SESSION_TIMEOUT_MINUTES=15
INACTIVITY_TIMEOUT_MINUTES=5

# OAuth2 / Identity Provider (if using Auth0, Okta, etc.)
AUTH_PROVIDER_URL=https://auth.yourcreditunion.com
AUTH_CLIENT_ID=your-oauth-client-id
AUTH_CLIENT_SECRET=your-oauth-client-secret

# ============================================================================
# SUPABASE (Configuration Storage)
# ============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# CARD PROCESSOR (Optional - for card controls)
# ============================================================================

# Fiserv, FIS, PSCU, or CO-OP credentials
CARD_PROCESSOR=fiserv
CARD_PROCESSOR_URL=https://api.fiserv.com/v1
CARD_PROCESSOR_API_KEY=your-card-processor-key
CARD_PROCESSOR_MERCHANT_ID=your-merchant-id

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+18135551234

# Firebase (Push notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ============================================================================
# MONITORING
# ============================================================================

# Error tracking
SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# COMPLIANCE
# ============================================================================

# Audit log retention (days)
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for banking compliance

# PCI-DSS encryption key (for card data at rest)
PCI_ENCRYPTION_KEY=your-256-bit-aes-key
